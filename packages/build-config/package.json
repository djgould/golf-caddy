{
  "name": "@repo/build-config",
  "version": "0.0.0",
  "private": true,
  "description": "Shared build configuration for Golf Caddy monorepo",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./metro": {
      "import": "./dist/metro.mjs",
      "require": "./dist/metro.js",
      "types": "./dist/metro.d.ts"
    },
    "./tsup": {
      "import": "./dist/tsup.mjs",
      "require": "./dist/tsup.js",
      "types": "./dist/tsup.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf dist node_modules .turbo"
  },
  "dependencies": {
    "tsup": "^8.0.0",
    "esbuild": "^0.19.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
} 