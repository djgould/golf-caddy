{
  "name": "@repo/logger",
  "version": "0.0.0",
  "private": true,
  "description": "Structured logging utilities for Golf Caddy",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist node_modules .turbo"
  },
  "dependencies": {
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.19",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.8.3"
  },
  "prettier": "@repo/prettier-config"
}